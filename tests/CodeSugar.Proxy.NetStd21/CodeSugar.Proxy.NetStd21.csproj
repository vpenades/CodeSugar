<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <IsPackable>false</IsPackable>
    <Nullable>enable</Nullable>    
  </PropertyGroup>

  <PropertyGroup>
    <DefineConstants>$(DefineConstants);CODESUGAR_USECODESUGARNAMESPACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\src\CodeSugar.System.Sources\*.cs" LinkBase="CodeSugar" />
    <Compile Include="..\..\src\CodeSugar.System.Sources\*.cs.pp" LinkBase="CodeSugar" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\src\CodeSugar.System.IO.Sources\*.cs" LinkBase="CodeSugarIO" />
    <Compile Include="..\..\src\CodeSugar.System.IO.Sources\*.cs.pp" LinkBase="CodeSugarIO" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\src\CodeSugar.MSExt.FileProviders\*.cs" LinkBase="CodeSugarFileProviders" />
    <Compile Include="..\..\src\CodeSugar.MSExt.FileProviders\*.cs.pp" LinkBase="CodeSugarFileProviders" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.FileProviders.Abstractions" Version="8.0.0" />
  </ItemGroup>

</Project>
